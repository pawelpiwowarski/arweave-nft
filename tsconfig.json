{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ES2018",
    "lib": [
      "dom"
    ],
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "module": "amd",
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    "isolatedModules": true
  },
  "exclude": [
    "./node_modules",
    "./scripts",
    "./tests"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
